<table class="table">
    <thead>
    <tr>
        <th class="col">id</th>
        <th class="col">login</th>
        <th class="col">name</th>
        <th class="col">Reg IP</th>
        <th class="col">Reg Data</th>
        <th class="col">Game stats</th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
        <tr>
            <th class="col">{{ this._id }}</th>
            <th class="col">{{ this.login }}</th>
            <th class="col">{{ this.username }}</th>
            <th class="col">{{ this.registerIp }}</th>
            <th class="col">{{ this.registerData }}</th>
            <th class="col">
                <p>total game score: {{ this.gameQuantity }}</p>
                <p>top score: {{ this.gameResult }}</p>
            </th>
        </tr>
    {{/each}}
    </tbody>
</table>

<nav aria-label="userPages">
    <ul class="pagination">
        {{#if prevPage.disable}}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
        {{else}}
            <li class="page-item">
                <a class="page-link" href="{{ prevPage.link }}">Previous</a>
            </li>
        {{/if}}

        {{#each pages}}
            {{#if this.active}}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="/admin/{{ this.number }}">{{ this.number }}</a>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="/admin/{{ this.number }}">{{ this.number }}</a>
                </li>
            {{/if}}
        {{/each}}

        {{#if nextPage.disable}}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
            </li>
        {{else}}
            <li class="page-item">
                <a class="page-link" href="{{ nextPage.link }}">Next</a>
            </li>
        {{/if}}
    </ul>
</nav>