<h1>Login form</h1>
<form action="/login" method="POST">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" name="login" class="form-control {{ validate.login }}" id="login"
            aria-describedby="emailHelp" value="{{ login }}" required>
        <div class="invalid-feedback">user with this login is not registered</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control {{ validate.password }}" id="pasword" value=""
            required>
        <div class="invalid-feedback">wrong password</div>
    </div>
    <div class="mb-3 row">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
<form action="/registration" method="GET" class="row">
    <button type="submit" formaction="/registration" formmethod="GET" class="btn btn-primary">Register</button>
</form>